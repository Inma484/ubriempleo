<div class="col-md-3 top-space">
	<div class="box relative article-height">
		<div class="absolute article-height background-cover" style="background:url(<%= article.cover.url(:thumbs)%>) ;top:0px; left: 0px; width: 100%;">
							
		</div>
		<div class="absolute article-height background-cover" style="background:rgba(0,0,0,0.3);top:0px; left: 0px; width: 100%;">
							
		</div>
		<div class="relative be-blue text-center">
				<h2><%= link_to article.title, article %></h2>
				<p><%=truncate(article.body, length:20)%></p> <!--corta la cadena segun el tamañao que le pongamos y le añade puntos suspensivos-->
		</div>
	</div>
</div>
