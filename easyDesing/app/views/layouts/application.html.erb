<!DOCTYPE html>
<html>
  <head>
    <title>EasyDesing</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track'=> true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track'=> true %>
  </head>

  <body>
  	<p class="notice" style=<%= "display:none;"if notice.nil? %><%= notice %></p>
    <p class="alert" style=<%= "display:none;"if alert.nil? %>><%= alert %></p>
    <header>
    	<nav>
    		<ul class="nav nav-tabs">
    			<li>
    				<%= link_to "Inicio", root_path %>
    			</li>
                <li>
                    <%=link_to "Posts", posts_path %>
                </li>
    			<% if user_signed_in? %>
    				<li>
    					<%= link_to "Editar Perfil", edit_user_registration_path(current_user) %>
    				</li>
    				<li>
    					<%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete %>																		
    				</li>
                    <li>
                        <%= link_to "Mi prefil", current_user %>
                    </li>
    			<%else%>
    				<li>
    					<%= link_to "Iniciar Sesión", new_user_session_path %>
    				</li>
    				<li>
    					<%= link_to "Registrarse", new_user_registration_path %>
    				</li>
    			<% end %>
    		</ul>
    	</nav>
    </header>
    <div class="row">
        <div class="col-md-6 center-block no-float">
         <%= yield %>
        </div>
    </div>
  </body>
</html>
