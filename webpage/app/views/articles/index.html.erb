<h1>Listado de Articulos</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Texto</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article %></td>
      <td><%= article.text %></td>
      <td><%=link_to 'Mostrar', article_path(article) %></td>
      <td><%= link_to 'Editar', edit_article_path(article) %></td>
      <td><%= link_to 'Eliminar', article_path(article), method: :delete, data: {confirm:  'Estas seguro?'}%></td>
    </tr>
  <% end %>
</table>